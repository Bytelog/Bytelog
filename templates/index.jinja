{% extends 'layout.jinja' %}
{% block primary %}
    <div class='hero'>
        {% block content %}{% endblock %}
    </div>
    <div class='index'>
        <ul>
        {% for index, object in data %}
            {% if index.startswith('articles/') %}
                <li>
                    <time datetime='{{ object.date }}'>{{ humanize.naturaldate(object.date) }}</time>
                    <h2><a href='/{{ index }}'>{{ object.title }}</a></h2>
                </li>
            {% endif %}
        {% endfor %}
        </ul>
    </div>
{% endblock %}
