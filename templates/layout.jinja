<!doctype html>
<html class='no-js' lang='en-us'>
    <head>
        <title>{{ meta.title }}</title>
        <meta name='viewport' content='width=device-width, initial-scale=1'>
        <link rel='author' href='{{ url_for('static', filename='styles/humans.txt') }}'>
        <link rel='stylesheet' href='{{ url_for('static', filename='styles/fira.css') }}'>
        <link rel='stylesheet' href='{{ url_for('static', filename='styles/main.css') }}'>
    </head>
    <body>

        <header>

            Bytelog
            <nav>
                <ul>
                    <li><a href='/'>Read</a></li>
                    <li><a href='/projects'>Projects</a></li>
                    <li><a href='/authors'>Author</a></li>
                    <li><a href='/about'>About</a></li>
                </ul>
                <input type='search' placeholder='Search by Title or Keyword'>
            </nav>
        </header>

        <main>
            {% block primary %}{% endblock %}
        </main>

        <footer>
            <a href='{{ url_for('static', filename='styles/humans.txt') }}'>Humans</a> &middot;
            <a href='/privacy'>Privacy</a> &middot;
            <a href='/feed'>Feed</a> &middot;
            <a href='/sitemap'>Sitemap</a> &middot;
            <a href='https://github.com/Bytelog/Bytelog'>Source</a>
        </footer>

        <script src='{{ url_for('static', filename='scripts/main.js') }}'></script>
    </body>
</html>
